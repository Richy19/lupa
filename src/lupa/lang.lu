      ctx.op_gget(3, "_G")
      ctx.op_tset(2, "__index", 3)
      ctx.op_gget(0, "setmetatable")
      ctx.op_call(0, 1, 2)

      ctx.freereg = 1
      */

      for i, stmt in ipairs(node) {
         ctx.emit(stmt)
      }
      ctx.leave()
   }
}


